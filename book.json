{
    "title": "Documentation of the Poppy Platform",
    "structure": {
        "readme": "README.md",
        "summary": "SUMMARY.md"
    },
    "plugins": [
        "-search",
        "-share",
        "anchorjs",
        "build",
        "copy-code-button",
        "custom-favicon",
        "download-pdf-link",
        "github",
        "language-picker",
        "localized-footer",
        "page-toc",
        "piwik",
        "richquotes",
        "search-plus",
        "sitemap",
        "toggle-chapters",
        "toggle-headers",
        "youtube"
    ],
    "pluginsConfig": {
        "favicon": "img/logo/favicon-128.ico",

        "theme-default": {
            "showLevel": true
        },
        "page-toc": {
            "position":"before-first",
            "selector":".markdown-section h2, .markdown-section h3"
        },
        "github": {
            "url": "https://github.com/poppy-project/poppy-docs"
        },
        "sitemap": {
            "hostname": "https://docs.poppy-project.org/"
        },
        "edit-link": {
            "base": "https://github.com/poppy-project/poppy-docs/edit/master/",
            "label": {
                "en": "Edit this page",
                "fr": "Editez cette page"
            }
        },
        "piwik": {
            "URL": "piwik.inria.fr/",
            "siteId": 66
        },
        "sharing": {
            "facebook": false,
            "twitter": false,
            "all": [
                "twitter", "facebook", "google"
            ]
        },
        "download-pdf-link": {
            "base": "https://www.gitbook.com/download/pdf/book/poppy-project/poppy-docs",
            "label": {
                "en": "Download PDF",
                "fr": "Télécharger en PDF"
            },
            "multilingual": true
        }
    },
    "variables": {
        "poppy_doc_version": "1.0",
        "poppy-humanoid_humanoid_hardware_version": "1.0",
        "poppy-humanoid_humanoid_software_version": "1.0",
        "poppy-torso_hardware_version": "1.0",
        "poppy-torso_software_version": "1.0",
        "poppy-ergo-jr_hardware_version": "1.0",
        "poppy-ergo-jr_software_version": "1.0"
    }
}
